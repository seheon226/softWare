<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.game.game_menu">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/main2"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="도형의 변"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="132dp"
        android:id="@+id/button15"
        android:onClick="onButton15Clicked"
        android:background="@drawable/button23"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textSize="40sp" />

    <Button
        android:text="도형의 꼭지점"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:id="@+id/button16"
        android:background="@drawable/button23"
        android:layout_marginTop="14dp"
        android:textSize="40sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/button15"
        android:layout_alignLeft="@+id/button15"
        android:layout_alignStart="@+id/button15"
        android:onClick="onButton16Clicked" />

    <Button
        android:text="도형의 넓이"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:id="@+id/button17"
        android:background="@drawable/button23"
        android:layout_below="@+id/button16"
        android:layout_alignLeft="@+id/button16"
        android:layout_alignStart="@+id/button16"
        android:textSize="40sp"
        android:textStyle="normal|bold"
        android:onClick="onButton17Clicked" />

    <Button
        android:text="도형의 부피"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:id="@+id/button18"
        android:background="@drawable/button23"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/button17"
        android:layout_alignLeft="@+id/button17"
        android:layout_alignStart="@+id/button17"
        android:textStyle="normal|bold"
        android:textSize="40sp"
        android:onClick="onButton18Clicked" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:id="@+id/button21"
        android:background="@drawable/arrow"
        android:onClick="onButtonBack"
        android:layout_alignParentTop="true" />

</RelativeLayout>
