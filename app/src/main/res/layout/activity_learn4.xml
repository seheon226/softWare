<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_learn4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.learn.Learn4Activity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/main"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView11"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:id="@+id/button34"
        android:background="@drawable/arrow"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onBack4Clicked" />

    <Button
        android:layout_width="40dp"
        android:layout_alignTop="@+id/button34"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button43"
        android:background="@drawable/home"
        android:layout_height="30dp"
        android:layout_marginRight="5dp"
        android:onClick="onForward4Clicked" />
    <TextView
        android:text="부피: 물체의 입체적인 크기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/button34"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignBottom="@+id/color1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/color1"
        android:layout_toStartOf="@+id/color1"
        android:layout_alignTop="@+id/color1" />
    <Button
        android:text="확대"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button44"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="축소"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button44"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button45" />

    <Button
        android:text="color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/color1"
        android:layout_below="@+id/button43"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button45"
        android:id="@+id/text4"
        android:textSize="18sp"
        android:layout_alignRight="@+id/button43"
        android:layout_alignEnd="@+id/button43"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="normal|bold"
        android:gravity="center_horizontal"
        />


</RelativeLayout>
