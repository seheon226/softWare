<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_learn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.learn.LearnActivity"
    android:background="@drawable/main2">


    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button30"
        android:background="@drawable/arrow"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:onClick="onButtonBack" />

    <Button
        android:text="변 "
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/button23"
        android:background="@drawable/button23"
        android:textSize="40sp"
        android:textStyle="normal|bold"
        android:onClick="onButton1Clicked"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/button30"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="넓이"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/button24"
        android:textStyle="normal|bold"
        android:textSize="40sp"
        android:background="@drawable/button23"
        android:layout_below="@+id/button22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onButton3Clicked" />

    <Button
        android:text="꼭지점"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:id="@+id/button22"
        android:background="@drawable/button23"
        android:layout_below="@+id/button23"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onButton2Clicked"
        android:textSize="40sp"
        android:textStyle="normal|bold"/>


    <Button
        android:text="부피"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/button27"
        android:background="@drawable/button23"
        android:textSize="40sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/button24"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onButton4Clicked" />

</RelativeLayout>
